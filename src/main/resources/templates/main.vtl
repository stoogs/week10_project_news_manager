<html>
<body>

    <div class="Menu_grid"Menu_grid>

        <div class="MainNews"MAINNEWS>
            <h1>TOP STORIES</h1>
            <br>
            #set($counter = 0)
            #foreach($article in $articles)
                <h2>$article.getTitle()</h2>
                <h3>$article.getHeadline()</h3>
                <h4>$articleTimeStamp[$counter]</h4>
            <div class="show-button">
                <form action="/articles/$article.getId()" method="get">
                    <input type="submit" value="Show Article">
                </form>
            </div>
            <br>

            #set($counter = $counter + 1)
            #end
        </div>

        <div class="SideBar"SIDEBAR>
            <h1>Popular News</h1>
            #foreach($article in $articlesByViews)
            <br>
            <h2>$article.getHeadline()</h2>
            <h4>$article.getCounter()<img src="/images/bananalogo.png" alt="bananalogo" height="21" width ="15">  by $article.getJournalist().getJournalistName()</h4>
                <div class="show-button">
                <form action="/articles/$article.getId()" method="get">
                    <input type="submit" value="Show Article">
                </form>
            </div></h4>
            #end
        </div>

    </div>
   </body>
</html>
